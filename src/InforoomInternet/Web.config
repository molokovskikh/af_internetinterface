<?xml version="1.0"?>
<configuration>

	<configSections>
		<section name="monorail" type="Castle.MonoRail.Framework.Configuration.MonoRailSectionHandler, Castle.MonoRail.Framework"/>
		<section name="brail" type="Castle.MonoRail.Views.Brail.BrailConfigurationSection, Castle.MonoRail.Views.Brail"/>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
	</configSections>

	<appSettings>
		<add key="clearInterval" value="20000" />
		<add key="connectIterationCount" value="100" />
		<add key="DebugHost" value="192.168.1.1" />
	</appSettings>

	<connectionStrings>
		<add name="local" connectionString="Data Source=localhost;Database=internet;User ID=root;Password=;Connect Timeout=300;pooling=true;convert zero datetime=yes;Default command timeout=300;Allow User Variables=true;"/>
		<add name="integration" connectionString="Data Source=localhost;Database=internet;User ID=root;Password=;Connect Timeout=300;pooling=true;convert zero datetime=yes;Default command timeout=300;Allow User Variables=true;"/>
	</connectionStrings>

	<log4net>

		<appender name="LogFile" type="log4net.Appender.RollingFileAppender, log4net">
			<file value="IVrn.log"/>
			<appendToFile value="true"/>
			<rollingStyle value="Size"/>
			<staticLogFileName value="true"/>
			<maximumFileSize value="1MB"/>
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%d [%t] %-5p %c - %m%n"/>
			</layout>
		</appender>

		<root>
			<level value="ERROR"/>
			<appender-ref ref="LogFile"/>
		</root>

		<logger name="NHibernate.SQL" additivity="false">
			<level value="OFF" />
			<appender-ref ref="LogFile" />
		</logger>

		<logger name="Castle.MonoRail.Framework.Services.AbstractControllerFactory" additivity="false">
			<level value="OFF" />
			<appender-ref ref="LogFile" />
		</logger>

	</log4net>

	<system.net>
		<mailSettings>
			<smtp deliveryMethod="SpecifiedPickupDirectory">
				<specifiedPickupDirectory pickupDirectoryLocation="TestData"/>
			</smtp>
		</mailSettings>
	</system.net>

	<system.web>
		<authentication mode="Forms">
			<forms cookieless="AutoDetect" loginUrl="Login/LoginPage?Partner=true" protection="All" requireSSL="false" timeout="400" />
		</authentication>
		<httpHandlers>
			<clear/>
			<add verb="*" path="*.ashx" type="System.Web.UI.SimpleHandlerFactory"/>
			<add path="*.css" verb="*" type="System.Web.StaticFileHandler"/>
			<add path="*.gif" verb="*" type="System.Web.StaticFileHandler"/>
			<add path="*.htm" verb="*" type="System.Web.StaticFileHandler" />
			<add path="*.js" verb="*" type="System.Web.StaticFileHandler" />
			<add path="*.jpg" verb="*" type="System.Web.StaticFileHandler" />
			<add path="*.png" verb="*" type="System.Web.StaticFileHandler" />
			<add path="Content/*.*" verb="*" type="System.Web.StaticFileHandler"/>
			<add path="Content/*/*.*" verb="*" type="System.Web.StaticFileHandler"/>
			<add path="JavaScript/*.*" verb="*" type="System.Web.StaticFileHandler"/>
			<add path="JavaScript/*/*.*" verb="*" type="System.Web.StaticFileHandler"/>
			<add path="*" verb="*" type="Castle.MonoRail.Framework.MonoRailHttpHandlerFactory, Castle.MonoRail.Framework"/>
		</httpHandlers>
		<siteMap>
			<providers>
				<add name="SiteMapProvider" type="System.Web.XmlSiteMapProvider" siteMapFile="~/Web.sitemap"/>
			</providers>
		</siteMap>
		<httpModules>
			<add name="asset" type="Common.Web.Ui.Asset.AssetModule, Common.Web.Ui"/>
			<add name="routing" type="Castle.MonoRail.Framework.Routing.RoutingModuleEx, Castle.MonoRail.Framework"/>
			<add name="active-record" type="Castle.ActiveRecord.Framework.SessionScopeWebModule, Castle.ActiveRecord.Web"/>
		</httpModules>
		<compilation debug="true" strict="false" explicit="true" targetFramework="4.0">
		</compilation>
		<trace enabled="false" requestLimit="10" pageOutput="false" traceMode="SortByTime" localOnly="true"/>
		<sessionState mode="InProc" stateConnectionString="tcpip=127.0.0.1:42424" sqlConnectionString="data source=127.0.0.1;user id=sa;password=" cookieless="false" timeout="20"/>
		<globalization requestEncoding="utf-8" responseEncoding="utf-8"/>
		<httpRuntime requestValidationMode="2.0" requestPathInvalidCharacters="" />
	</system.web>

	<system.webServer>
		<validation validateIntegratedModeConfiguration="false"/>
		<urlCompression doStaticCompression="false" doDynamicCompression="false" />
		<defaultDocument>
			<files>
				<clear />
			</files>
		</defaultDocument>
		<modules>
			<add name="asset" type="Common.Web.Ui.Asset.AssetModule, Common.Web.Ui"/>
			<add name="active-record" type="Castle.ActiveRecord.Framework.SessionScopeWebModule, Castle.ActiveRecord.Web" preCondition="managedHandler" />
			<add name="routing" type="Castle.MonoRail.Framework.Routing.RoutingModuleEx, Castle.MonoRail.Framework" />
		</modules>
		<handlers>
			<clear />
			<add name="ASHX" path="*.ashx" verb="*" type="System.Web.UI.SimpleHandlerFactory"/>
			<add name="CSS" path="*.css" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="GIF" path="*.gif" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="HTM" path="*.htm" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="JS" path="*.js" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="JPG" path="*.jpg" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="PNG" path="*.png" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="ICO" path="*.ico" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="TXT" path="*.txt" verb="*" type="System.Web.StaticFileHandler"/>

			<add name="Images" path="Content/*.*" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="Images_2" path="Content/*/*.*" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="Script" path="JavaScript/*.*" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="Script_2" path="JavaScript/*/*.*" verb="*" type="System.Web.StaticFileHandler"/>
			<add name="Route1" verb="*" path="*.rails" type="Castle.MonoRail.Framework.MonoRailHttpHandlerFactory, Castle.MonoRail.Framework"/>
			<add name="Route2" path="*" verb="*" type="Castle.MonoRail.Framework.MonoRailHttpHandlerFactory, Castle.MonoRail.Framework"/>
		</handlers>
	</system.webServer>

	<brail>
		<import namespace="Boo.Lang.Builtins"/>
		<import namespace="System.Web"/>
	</brail>
</configuration>
