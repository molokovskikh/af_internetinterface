<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">

<head>
  <title>Инфорум</title>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" />

<script type="text/javascript" src="${siteroot}/assets/javascripts/jquery-1.6.4.min.js"></script>
<script type="text/javascript" src="${siteroot}/assets/javascripts/jquery-ui-1.8.16.min.js"></script>
<script type="text/javascript" src="${siteroot}/javascript/jquery.validate.js"></script>
<script type="text/javascript" src="${siteroot}/javascript/jquery.ui.datepicker-ru.js"></script>

<link rel="stylesheet" href="${siteroot}/CSS/styles.css" type="text/css" />
<link rel="stylesheet" href="${siteroot}/assets/Stylesheets/themes/base/jquery.ui.progressbar.css" type="text/css" />
<link rel="stylesheet" href="${siteroot}/assets/Stylesheets/themes/base/jquery-ui-1.8.16.custom.css" type="text/css" />

<script type="text/javascript" src="http://userapi.com/js/api/openapi.js?45"></script>
<script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>

<script type="text/javascript">
	window.___gcfg = { lang: 'ru' };

	(function () {
		var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
		po.src = 'https://apis.google.com/js/plusone.js';
		var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
	})();

	VK.init({ apiId: 2702610, onlyWidgets: true });

	VK.Widgets.Like("vk_like", { type: "button", verb: 1 });
</script>

</head>

<body>
<div id="wrapper">
	<div class="left">
		<a href="${siteroot}/" id="logo">&nbsp;</a>
	</div>
	<div class="right">
		<div id="icons">
			<a href="${siteroot}/" class="home">&nbsp;</a>
			<a href="mailto:internet@ivrn.net" class="mail">&nbsp;</a>
			<%if not AccessEditLink: %>
			<a href="${siteroot}/Login/LoginPage?partner=true" class="login">&nbsp;</a>
			<%end %>
		</div>
	</div>
	<div class="center">
		<div id="header">
			<!-- Шапка -->
		</div>
	</div>
	<br clear="all" />
	 <div id="container">
		<!-- Меню// -->
		<div id="menu">
			<div class="top">&nbsp;</div>
			<div class="middle">
			<ul class="main">
<%	component MenuList, {} %>
			</ul>
			</div>
		</div>
		<!-- //Меню -->

		<!-- Левая колонка// -->
		<div class="left">
			<!-- Кнопка // -->
			<a href="${siteroot}/Main/HowPay" id="HowPay1" class="button-blue">Как оплатить?</a>
			<!-- // Кнопка -->

			<!-- Телефон // -->
			<div id="phone">
				<small>473</small><br />
				<span>22-999-87</span>
			</div>
			<!-- // Телефон -->

			<!-- Контакты // -->
			<div id="contacts">
				<h3>Контакты</h3>
				<p>Воронеж,<br />ул.Студенческая, 12а<br />Тел: 22-999-87<br />
				Тел: +7-920-22-999-87
				Почта: <a id="mail_link" title="адрес службы поддержки пользователей" href="mailto:internet@ivrn.net">internet@ivrn.net</a>
				</p>
			</div>
			<!-- // Контакты -->

			<!-- Линия // -->
			<hr noshade="noshade" width="163" color="#7197b5" class="line-home-left" />
			<!-- // Линия -->
		</div>
		<!-- // Левая колонка -->

		<!-- Правая колонка // -->
		<div class="right">
			<a href="${siteroot}/Main/Feedback" id="HowPay2" class="button-orange">Обратная связь</a>
			<%if AccessEditLink: %>
			<a href="${siteroot}/Editor/Menu" style="color:White; margin-left:10px;">Редактировать меню</a>
			<%end %>
		</div>
		<!-- //Правая колонка -->

		<!-- Основная часть// -->
		<div class="center" id="content">
			${ChildOutput}
		</div>
		<!-- //Основная часть -->
		<br clear="all" />
	</div>
	<div id="container-bottom">&nbsp;</div>
	<!-- Подвал // -->
	<div id="footer">
		 <div id="bottom-menu">
		<!-- Нижнее меню -->
		</div>
		<div class="left">
		<!-- Левая колонка -->
		ИНФОРУМ, 2011
		</div>
		<div class="right">
		<!-- Правая колонка -->
		Все права защищены
		</div>
		<div class="center">
<% 	component FooterMenu, {} %>
		</div>
		<br clear="all" />
		<div class="cable">&nbsp;</div>
	</div>
	<!-- // Подвал -->
</div>
</body>

</html>
