@using Inforoom2.Models
@model dynamic

@{
	ViewBag.Title = "Узлы связи";
	Layout = "~/Views/Shared/_Layout.cshtml";
	IList<NetworkNode> nodes = ViewBag.NetworkNodes;
}
<div class="form-group">
<a class="btn btn-success btn-sm btn-icon icon-left" href = '@Url.Action("CreateNetworkNode", "Switch")'>
	<i class="entypo-plus"></i>
	Создать узел связи
</a>
	</div>
<div id="table-2_wrapper" class="dataTables_wrapper form-inline no-footer">
<table id="table-2" class="table table-bordered table-striped datatable dataTable no-footer" role="grid" aria-describedby="table-2_info">
	<thead>
		<tr role="row">
			<th class="sorting" tabindex="0" aria-controls="table-2" >Id</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Название</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Описание</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Виртуальный</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Действия</th>
		</tr>
	</thead>
			@foreach (var item in nodes)
			{
			<tr>
				<td>@Html.DisplayFor(modelItem => item.Id)</td>
				<td>@Html.DisplayFor(modelItem => item.Name)</td>
				<td>@Html.DisplayFor(modelItem => item.Description)</td>
				<td>@Html.DisplayFor(modelItem => item.Virtual)</td>
				<td>
					<a class="btn btn-success btn-sm btn-icon icon-left" href="@Url.Action("EditNetworkNode","Switch",new {id = item.Id})">
						<i class="entypo-vcard"></i>
						Изменить
					</a>
					<a class="btn btn-red btn-sm btn-icon icon-left" href="@Url.Action("DeleteNetworkNode","Switch",new {id = item.Id})">
						<i class="entypo-cancel-circled"></i>
						Удалить
					</a>
				</td>
			</tr>
			}
	<tbody>
	</tbody>
</table>
</div>