@using System.Activities.Expressions
@using System.Activities.Statements
@using Inforoom2.Models
@{
	ViewBag.Title = "Заявки клиентов на регистрацию";
	Layout = "~/Views/Shared/_Layout.cshtml";
	List<ClientRequest> ClientRequests = ViewBag.ClientRequests;
}

<div id="table-2_wrapper" class="dataTables_wrapper form-inline no-footer">
<table id="table-2" class="table table-bordered table-striped datatable dataTable no-footer" role="grid" aria-describedby="table-2_info">
	<thead>
		<tr role="row">
			<th class="sorting" tabindex="0" aria-controls="table-2" >#</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Имя</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Адрес</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Дата</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Действия</th>
		</tr>
	</thead>
			
	<tbody>
		@foreach (var request in ClientRequests)
  {
			<tr role="row" class="odd">
				<td>@request.Id</td>
				<td>@request.ApplicantName</td>
				<td>@request.GetAddress()</td>
				<td>@request.RegDate</td>
				<td>
					<a href="@Url.Action("ClientRequestRegistration", new { @requestId = request.Id })" class="btn btn-green">зарегистрировать</a></td>
			</tr>
		}
	</tbody>
</table>
	</div>