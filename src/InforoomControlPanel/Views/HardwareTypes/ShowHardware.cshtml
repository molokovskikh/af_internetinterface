@using Inforoom2.Models

@{
	ViewBag.Title = "Арендуемое оборудование";
	Layout = "~/Views/Shared/_Layout.cshtml";
	List<RentalHardware> hardwaresList = ViewBag.HardwareList;
}

<div id="table-2_wrapper" class="dataTables_wrapper form-inline no-footer">
	<table id="table-2" class="table table-bordered table-striped datatable dataTable no-footer" role="grid" aria-describedby="table-2_info">
		<thead>
			<tr role="row">
				<th class="sorting" tabindex="0" aria-controls="table-2" >#</th>
				<th class="sorting" tabindex="0" aria-controls="table-2" >Название</th>
				<th class="sorting" tabindex="0" aria-controls="table-2" >Цена, руб.</th>
				<th class="sorting" tabindex="0" aria-controls="table-2" >Количество бесплатных дней</th>
				<th class="sorting" tabindex="0" aria-controls="table-2" >Действия</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in hardwaresList)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.Id)</td>
					<td>@Html.DisplayFor(modelItem => item.Name)</td>
					<td>@Html.DisplayFor(modelItem => item.Price)</td>
					<td>@Html.DisplayFor(modelItem => item.FreeDays)</td>
					<td>
						<a class="btn btn-success btn-sm btn-icon icon-left" href="@Url.Action("EditHardware","HardwareTypes",new {id = item.Id})">
							<i class="entypo-vcard"></i>
							Изменить
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
