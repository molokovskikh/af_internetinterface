@using Inforoom2.Models
@model dynamic
@{
	ViewBag.Title = "Список html для регионов";
	Layout = "~/Views/Shared/_Layout.cshtml"; 
	IList<PlanHtmlContent> planContent = ViewBag.PlanContent;
}
<div id="table-2_wrapper" class="dataTables_wrapper form-inline no-footer">
	

	<div class="form-group">
		<a class="btn btn-green" href="@Url.Action("CreateHtmlPlan","Plans")">Добавить содержание</a>
	</div>


	<table id="table-2" class="table table-bordered table-striped datatable dataTable no-footer" role="grid" aria-describedby="table-2_info">
		<thead>
			<tr role="row">
				<th class="sorting" tabindex="0" aria-controls="table-2">Id</th>
				<th class="sorting" tabindex="0" aria-controls="table-2">Регион</th> 
				<th class="sorting" tabindex="0" aria-controls="table-2">Действия</th>
			</tr>
		</thead>

		<tbody>
			@foreach (var item in planContent)
			{
				<tr role="row" class="odd">
					<td><a href="@Url.Action("EditHtmlPlan","Plans",new {id = item.Id})">@item.Id</a></td>
					<td>@item.Region.Name</td> 
					<td>
						<a class="btn btn-success btn-sm btn-icon icon-left" href="@Url.Action("EditHtmlPlan", "Plans", new { id = item.Id })">
							<i class="entypo-vcard"></i>
							Изменить
						</a>
						<a class="btn btn-red btn-sm btn-icon icon-left" href="@Url.Action("RemoveHtmlPlan", "Plans", new { id = item.Id })">
							<i class="entypo-cancel-circled"></i>
							Удалить
						</a> 
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>