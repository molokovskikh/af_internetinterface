@using System.Activities.Expressions
@using System.Activities.Statements
@using Inforoom2.Models
@{
	ViewBag.Title = "Сервисные заявки";
	Layout = "~/Views/Shared/_Layout.cshtml";
	List<ServiceRequest> ServiceRequests = ViewBag.ServiceRequests;
}

<div id="table-2_wrapper" class="dataTables_wrapper form-inline no-footer">
<table id="table-2" class="table table-bordered table-striped datatable dataTable no-footer" role="grid" aria-describedby="table-2_info">
	<thead>
		<tr role="row">
			<th class="sorting" tabindex="0" aria-controls="table-2" >#</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Описание</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Дата создания</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Назначена</th>
			<th class="sorting" tabindex="0" aria-controls="table-2" >Действия</th>
		</tr>
	</thead>
			
	<tbody>
		@foreach (var request in ServiceRequests) {
			<tr role="row" class="odd">
				<td>@request.Id</td>
				<td>@request.Description</td>
				<td>@request.CreationDate</td>
				<td>@(request.ServiceMan != null ? request.ServiceMan.Employee.Name : "Не назначена")</td>
				<td>
					<a class="btn btn-success btn-sm btn-icon icon-left" href="@Url.Action("AttachServiceRequest","ConnectionTeam",new {requestId = request.Id})">
						<i class="entypo-plus-circled"></i>
						Назначить в график
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>
	</div>