<% import System.Linq.Enumerable from System.Core %>
<% OutputSubView("AgentFilter") %>
<style type="text/css">
    .info_paym
    {
        font-size:16px;
        font-style:inherit;
        font-weight:bold;
        }
</style>
<center>
<span class="info_paym" style="color:Green;">Всего ${filter._lastRowsCount} платежей</span>
<span class="info_paym" style="color:Green;">на сумму  ${TotalSumm.ToString("0.00")} рублей</span>
</center>
<table class="table"  style="width: 100%; font-style:oblique">
        <thead>
            <tr valign="top">
                <th>Номер счета</th>
                <th>ФИО</th>
                <th>Сумма</th>
                <th>Дата</th>
            </tr>
        </thead>
        <tbody>
            <%for i,item in enumerate(Payments): %>
                <tr>
                    <td><a href="../Search/Redirect?filter.ClientCode=${item.Client.Id}"> ${item.Client.Id.ToString("00000")}</a></td>
                    <td>${item.Client.Name}</td>
                    <td>${item.Sum.ToString("0.00")}</td>
                    <td>${item.PaidOn}</td>
                </tr>
            <%end %>
                <tr>
                    <td colspan=4>
                        <div class="Paginator">
                            ${PaginatorHelper.ShowPaginator()}
                        </div>
                    </td>
                </tr>
        </tbody>
</table>