<% OutputSubView("""\Subview\MapHead""") %>
<body>
	<script type="text/javascript">
		Date.firstDayOfWeek = 0;
		Date.format = 'dd.mm.yyyy';
		$(function () {
			$('#startCalendar')
		.datePicker({ inline: true, startDate: '01/01/2010' })
		.bind(
			'dateSelected',
			function (e, selectedDate, $td) {
				$('#startDate').val(selectedDate.getDate() + '.' + Number(selectedDate.getMonth() + 1) + '.' + selectedDate.getFullYear());
			}
		).val(new Date().asString()).trigger('change');

        $('#startDate').val(new Date().asString());
        $('#endDate').val(new Date().asString());

		$('#endCalendar')
		.datePicker({ inline: true, startDate: '01/01/2010' })
		.bind(
			'dateSelected',
			function (e, selectedDate, $td) {
				$('#endDate').val(selectedDate.getDate() + '.' + Number(selectedDate.getMonth() + 1) + '.' + selectedDate.getFullYear());
			}
		);
		});
	</script>

<center>
	<div class="filterDiv">
		<form method="get" action="${siteroot}/Payers/ShowAgent">
			<p>Выберете регистратора по которому будет применен фильтр</p>
			<select name="agent" id="agent" style="width: 70%" >
			<%for i, agent in enumerate(agents):%>
			<option id="agent${agent.Id}" value="${agent.Id}" ${"selected" if (agent.Id == agentId)}> ${agent.Name} </option>
			<% end %>
			</select>
			<input id="SearchButton" type="submit" value="Показать"  align="right" />
			<p>
			<table>
				<thead>
					<tr>
						<th>Начало периода</th>
						<th>Конец периода</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>
						<div class="turn-me-into-datepicker" id="startCalendar"></div>
						<input type="hidden" name="startDate" id="startDate" class="hasDatepicker">
						</td>
						<td>
						<div class="turn-me-into-datepicker" id="endCalendar"></div>
						<input type="hidden" name="endDate" id="endDate" class="hasDatepicker">
						</td>
					</tr>
				</tbody>
				</table>
			</p>
		</form>
	</div>
</center>
