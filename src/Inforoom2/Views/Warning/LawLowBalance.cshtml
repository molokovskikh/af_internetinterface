@using Inforoom2.Models
@using Inforoom2.Models.Services
@model dynamic
@section JavaScript{<script type="text/javascript" src="@Url.Content("~/Scripts/warningredirect.js?v=1")"></script>}
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Предупреждение";
	Client client = ViewBag.Client;
}
<div class="name-page">
	<h1 class="header-page" >Внимание!</h1>
</div>
<div class="block-page">
	<p class="info">Номер лицевого счета для оплаты: @client.Id</p>
	<p>Доступ в интернет заблокирован.</p>
	<p>Для продолжения работы в интернете необходимо оплатить услуги.</p>
	<form method="post" action="@Url.Action("TryToDisableWarning", "Warning")">
		<input name="referer" type="hidden" value="!{referer}">
		<input type="submit" class="button warning" value="Продолжить">
	</form>
</div>