@using (@Html.BeginForm("Index", "Bussiness", FormMethod.Post)) {
	<div class="window">
		<div class="windowicon"></div>
		<div class="cooperation">
			<h3>Свяжитесь с нами</h3>
			<p>по вопросам сотрудничеста:</p>
		</div>
		<div class="applications">
			<div class="label">Ф.И.О:<sup>*</sup></div>
			@Html.ValidationEditor(validationRunner, ticket, "Name", new { @class = "application" }, HtmlTag.input, HtmlType.none)
			<div class="label">Номер телефона:<sup>*</sup></div>
			@Html.ValidationEditor(validationRunner, ticket, "PhoneNumber", new { @class = "application" }, HtmlTag.input, HtmlType.none)
			<div class="label">Электронная почта:</div>
			@Html.ValidationEditor(validationRunner, ticket, "Email", new { @class = "application" }, HtmlTag.input, HtmlType.none)
			<div class="label">Комментарий:</div>
			@Html.ValidationEditor(validationRunner, ticket, "Text", null, HtmlTag.textarea, HtmlType.none)
		</div>
		<div class="definitely"><sup>*</sup>- обязательно для заполнения</div>
		<input class="contacting" type="submit" value="Связаться">
	</div>
}